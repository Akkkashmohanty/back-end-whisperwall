generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

/* ============================
   ENUMS
============================ */

enum UserStatus {
  PENDING
  ACTIVE
  REJECTED
  SUSPENDED
}

enum Gender {
  MALE
  FEMALE
}

enum VerificationType {
  COLLEGE_EMAIL
  ID_CARD
}

enum VerificationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ResetStatus {
  PENDING
  APPROVED
  USED
  REJECTED
}

enum PostVisibility {
  VISIBLE
  HIDDEN
  DELETED
}

/* ============================
   CORE USER (REAL IDENTITY)
============================ */

model User {
  id             String      @id @default(uuid())
  email          String?     @unique
  passwordHash   String
  dob            DateTime
  gender         Gender
  college        String
  stream         String
  status         UserStatus  @default(PENDING)

  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  profile        AnonymousProfile?
  verification   VerificationRequest?
  resetRequests  PasswordResetRequest[]
}

/* ============================
   ANONYMOUS PROFILE
============================ */

model AnonymousProfile {
  id         String   @id @default(uuid())
  username   String   @unique
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id])

  createdAt  DateTime @default(now())

  posts      Post[]
  reports    Report[]
}

/* ============================
   VERIFICATION
============================ */

model VerificationRequest {
  id               String             @id @default(uuid())
  userId           String             @unique
  user             User               @relation(fields: [userId], references: [id])

  type             VerificationType
  collegeEmail     String?
  idCardImageUrl   String?

  status           VerificationStatus @default(PENDING)

  reviewedByAdminId String?
  reviewedByAdmin   Admin?            @relation(fields: [reviewedByAdminId], references: [id])

  reviewedAt       DateTime?
  createdAt        DateTime           @default(now())
}

/* ============================
   PASSWORD RESET
============================ */

model PasswordResetRequest {
  id        String      @id @default(uuid())
  userId    String
  user      User        @relation(fields: [userId], references: [id])

  token     String?     @unique
  status    ResetStatus @default(PENDING)

  createdAt DateTime    @default(now())
  usedAt    DateTime?
}

/* ============================
   ADMIN
============================ */

model Admin {
  id         String   @id @default(uuid())
  email      String   @unique
  password   String
  role       String   @default("MODERATOR")

  createdAt  DateTime @default(now())

  reviewedVerifications VerificationRequest[]
}

/* ============================
   POSTS
============================ */

model Post {
  id                 String           @id @default(uuid())
  content            String
  college            String
  authorProfileId    String
  visibility         PostVisibility   @default(VISIBLE)
  reportCount        Int              @default(0)
  createdAt          DateTime         @default(now())

  authorProfile      AnonymousProfile @relation(fields: [authorProfileId], references: [id])
  reports            Report[]

  @@index([college])
  @@index([createdAt])
}

/* ============================
   REPORTS
============================ */

model Report {
  id          String   @id @default(uuid())
  reason      String
  postId      String
  reporterId  String
  createdAt   DateTime @default(now())

  post        Post             @relation(fields: [postId], references: [id])
  reporter    AnonymousProfile @relation(fields: [reporterId], references: [id])

  @@unique([postId, reporterId])
}
