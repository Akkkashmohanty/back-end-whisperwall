generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

/* ============================
   ENUMS
============================ */

enum UserStatus {
  PENDING
  ACTIVE
  REJECTED
  SUSPENDED
}

enum Gender {
  MALE
  FEMALE
}

enum VerificationType {
  COLLEGE_EMAIL
  ID_CARD
}

enum VerificationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ResetStatus {
  PENDING
  APPROVED
  USED
  REJECTED
}

enum PostVisibility {
  VISIBLE
  HIDDEN
  DELETED
}

enum CommentVisibility {
  VISIBLE
  HIDDEN
  DELETED
}

enum NotificationType {
  POST_LIKED
  POST_COMMENTED
  COMMENT_REPLIED
  POST_REPOSTED
  ACCOUNT_APPROVED
  PASSWORD_RESET_APPROVED
}

/* ============================
   CORE USER (REAL IDENTITY)
============================ */

model User {
  id             String      @id @default(uuid())
  email          String?     @unique
  passwordHash   String
  dob            DateTime
  gender         Gender
  college        String
  stream         String
  status         UserStatus  @default(PENDING)

  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  profile        AnonymousProfile?
  verification   VerificationRequest?
  resetRequests  PasswordResetRequest[]
  notifications  Notification[]
}

/* ============================
   ANONYMOUS PROFILE
============================ */

model AnonymousProfile {
  id         String   @id @default(uuid())
  username   String   @unique
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id])

  createdAt  DateTime @default(now())

  posts      Post[]
  comments   Comment[]
  reports    Report[]

  commentReports CommentReport[]

  postLikes     PostLike[]
  commentLikes  CommentLike[]
  notifications Notification[]
}

/* ============================
   VERIFICATION
============================ */

model VerificationRequest {
  id               String             @id @default(uuid())
  userId           String             @unique
  user             User               @relation(fields: [userId], references: [id])

  type             VerificationType
  collegeEmail     String?
  idCardImageUrl   String?

  status           VerificationStatus @default(PENDING)

  reviewedByAdminId String?
  reviewedByAdmin   Admin?            @relation(fields: [reviewedByAdminId], references: [id])

  reviewedAt       DateTime?
  createdAt        DateTime           @default(now())
}

/* ============================
   PASSWORD RESET
============================ */

model PasswordResetRequest {
  id        String      @id @default(uuid())
  userId    String
  user      User        @relation(fields: [userId], references: [id])

  token     String?     @unique
  status    ResetStatus @default(PENDING)

  createdAt DateTime    @default(now())
  usedAt    DateTime?
}

/* ============================
   ADMIN
============================ */

model Admin {
  id         String   @id @default(uuid())
  email      String   @unique
  password   String
  role       String   @default("MODERATOR")

  createdAt  DateTime @default(now())

  reviewedVerifications VerificationRequest[]
}

/* ============================
   POSTS
============================ */

model Post {
  id                 String           @id @default(uuid())
  content            String
  college            String
  authorProfileId    String
  visibility         PostVisibility    @default(VISIBLE)
  reportCount        Int               @default(0)

  originalPostId     String?
  isRepost           Boolean          @default(false)

  createdAt          DateTime          @default(now())

  authorProfile      AnonymousProfile  @relation(fields: [authorProfileId], references: [id])

  originalPost       Post?             @relation("RepostRelation", fields: [originalPostId], references: [id])
  reposts             Post[]           @relation("RepostRelation")

  reports            Report[]
  comments           Comment[]
  likes              PostLike[]

  @@index([college])
  @@index([createdAt])
  @@index([originalPostId])
}

/* ============================
   REPORTS
============================ */

model Report {
  id          String   @id @default(uuid())
  reason      String
  postId      String
  reporterId  String
  createdAt   DateTime @default(now())

  post        Post             @relation(fields: [postId], references: [id])
  reporter    AnonymousProfile @relation(fields: [reporterId], references: [id])

  @@unique([postId, reporterId])
}

/* ============================
   COMMENTS MODULE
============================ */

model Comment {
  id               String             @id @default(uuid())
  content          String
  postId           String
  authorProfileId  String
  parentId         String?
  visibility       CommentVisibility  @default(VISIBLE)
  reportCount      Int                @default(0)

  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt

  post             Post               @relation(fields: [postId], references: [id])
  authorProfile    AnonymousProfile   @relation(fields: [authorProfileId], references: [id])
  parent           Comment?           @relation("CommentReplies", fields: [parentId], references: [id])
  replies          Comment[]          @relation("CommentReplies")

  reports          CommentReport[]
  likes            CommentLike[]

  @@index([postId, createdAt])
  @@index([authorProfileId])
  @@index([parentId])
}

/* ============================
   REPORT REPORTS MODEL
============================ */

model CommentReport {
  id          String   @id @default(uuid())
  commentId   String
  reporterId  String
  reason      String
  createdAt   DateTime @default(now())

  comment     Comment          @relation(fields: [commentId], references: [id])
  reporter    AnonymousProfile @relation(fields: [reporterId], references: [id])

  @@unique([commentId, reporterId])
}

/* ============================
   LIKE MODULE
============================ */

model PostLike {
  id         String   @id @default(uuid())
  postId     String
  profileId  String
  createdAt  DateTime @default(now())

  post        Post             @relation(fields: [postId], references: [id])
  profile     AnonymousProfile @relation(fields: [profileId], references: [id])

  @@unique([postId, profileId])
  @@index([postId])
  @@index([profileId])
}

/* ============================
   COMMENT LIKE MODULE
============================ */

model CommentLike {
  id         String   @id @default(uuid())
  commentId  String
  profileId  String
  createdAt  DateTime @default(now())

  comment    Comment          @relation(fields: [commentId], references: [id])
  profile    AnonymousProfile @relation(fields: [profileId], references: [id])

  @@unique([commentId, profileId])
  @@index([commentId])
  @@index([profileId])
}

/* ============================
   NOTIFICATION MODULE
============================ */

model Notification {
  id        String           @id @default(uuid())

  // Receiver (real user, not profile)
  userId    String
  user      User             @relation(fields: [userId], references: [id])

  type      NotificationType

  // Related entity
  postId    String?
  commentId String?

  // Anonymous actor (who triggered it)
  actorProfileId String?
  actorProfile    AnonymousProfile? @relation(fields: [actorProfileId], references: [id])

  // Metadata (JSON for future)
  meta      Json?

  isRead    Boolean          @default(false)

  createdAt DateTime         @default(now())

  @@index([userId, isRead])
  @@index([createdAt])
}