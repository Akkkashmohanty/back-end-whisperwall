generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

/* ============================
   ENUMS
============================ */

enum UserStatus {
  PENDING
  ACTIVE
  REJECTED
  SUSPENDED
}

enum Gender {
  MALE
  FEMALE
}

enum VerificationType {
  COLLEGE_EMAIL
  ID_CARD
}

enum VerificationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ResetStatus {
  PENDING
  APPROVED
  USED
  REJECTED
}

/* ============================
   CORE USER (REAL IDENTITY)
   NEVER EXPOSED TO PUBLIC
============================ */

model User {
  id             String      @id @default(uuid())
  email          String?     @unique
  passwordHash   String
  dob            DateTime
  gender         Gender
  college        String
  stream         String
  status         UserStatus  @default(PENDING)

  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  profile        AnonymousProfile?
  verification   VerificationRequest?
  resetRequests  PasswordResetRequest[]
}

/* ============================
   PUBLIC ANONYMOUS PROFILE
============================ */

model AnonymousProfile {
  id         String   @id @default(uuid())
  username   String   @unique
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id])

  createdAt  DateTime @default(now())
}

/* ============================
   COLLEGE VERIFICATION
============================ */

model VerificationRequest {
  id               String            @id @default(uuid())
  userId           String            @unique
  user             User              @relation(fields: [userId], references: [id])

  type             VerificationType
  collegeEmail     String?
  idCardImageUrl   String?

  status           VerificationStatus @default(PENDING)
  reviewedByAdmin  String?
  reviewedAt       DateTime?

  createdAt        DateTime @default(now())
}

/* ============================
   PASSWORD RESET (ADMIN CONTROLLED)
============================ */

model PasswordResetRequest {
  id        String     @id @default(uuid())
  userId    String
  user      User       @relation(fields: [userId], references: [id])

  token     String     @unique
  status    ResetStatus @default(PENDING)

  createdAt DateTime   @default(now())
  usedAt    DateTime?
}

/* ============================
   ADMIN USERS
============================ */

model Admin {
  id         String   @id @default(uuid())
  email      String   @unique
  password   String
  role       String   @default("MODERATOR")

  createdAt  DateTime @default(now())
}
